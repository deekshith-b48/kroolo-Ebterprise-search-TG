# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Backend Configuration
BACKEND_BASE_URL=https://your-backend-ngrok-url.ngrok.io
BACKEND_API_KEY=your_backend_api_key_here
BACKEND_JWT_SECRET=your_jwt_secret_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Authentication
ALLOWED_USER_IDS=123456789,987654321
ADMIN_USER_IDS=123456789

# File Storage
FILE_STORAGE_TYPE=s3  # s3, local, or backend
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1

# Local file storage (if FILE_STORAGE_TYPE=local)
LOCAL_STORAGE_PATH=./uploads

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Bot Settings
MAX_FILE_SIZE_MB=50
SESSION_TIMEOUT_MINUTES=30
SEARCH_RESULTS_LIMIT=10
PAGINATION_SIZE=5

# Development
DEBUG=false
WEBHOOK_MODE=true  # false for long-polling in development
